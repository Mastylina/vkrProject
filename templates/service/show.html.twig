{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ service.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ service.Name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ service.price }}</td>
        </tr>
        <tr>
            <th>ExecutionTime</th>
            <td>{{ service.executionTime ? service.executionTime|date('H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td>{{ service.photo }}</td>
        </tr>
        </tbody>
    </table>

    <h5>Список мастеров</h5>
    <o>
        {% for worker in workers %}
            <li><a class="fs-5"
                   href="{{ path('app_worker_show', {'id': worker.id}) }}">{{worker.userWorker.name}}</a></li>
        {% else %}
            <h4>Нет мастеров</h4>
        {% endfor %}
    </o>
    <a href="{{ path('app_service_index') }}">Вернуться к списку услуг</a>

    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}

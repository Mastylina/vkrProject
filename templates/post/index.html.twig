{% extends 'base.html.twig' %}

{% block title %}Список должностей{% endblock %}

{% block body %}
    <div class="container">
    <h1>Список должностей</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.name }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}">Показать</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет должностей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}">Создать</a>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container-sm">
    <h1 class="h3 mb-3 font-weight-normal text-center">Заполните базувую информацию</h1>
    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.surname) }}
    {{ form_row(registrationForm.name) }}
    {{ form_row(registrationForm.patronymic) }}
    {{ form_row(registrationForm.numberPhone) }}
    {{ form_row(registrationForm.birthdate) }}

    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Password'
    }) }}
    {{ form_row(registrationForm.agreeTerms) }}

    <button> <a class="btn btn-primary" type="submit">
            далее
        </a></button>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}

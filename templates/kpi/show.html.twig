                <th>Вес величины качества обслуживания</th>
                <td>{{ kpi.weightQualityService }}</td>
            </tr>
            <tr>
                <th>Минимальная величина качества обслуживания</th>
                <td>{{ kpi.minQualityService }}</td>
            </tr>
            <tr>
                <th>Фактическая величина качества обслуживания</th>
                <td>{{ kpi.factQualityService }}</td>
            </tr>
            <tr>
                <th>Планируемая величина качества обслуживания</th>
                <td>{{ kpi.plannedQualityService }}</td>
            </tr>
            </tbody>
        </table>

    <h1>Коэффицент {{ salaryKPI }}</h1>
    <h1>Заработанная плата {{ salary }}</h1>
    {{ include('kpi/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% for comment in comments %}
    {% if comment.sender.roles == ['ROLE_CLIENT'] %}
        <section class="chat w-75 container " >
            <div class="message message--user-1  w-50" >
                <time class="message__time">{{ comment.dateAndTime|date('H:i Y-m-d') }}</time>

                <div class="text-black text-center w-100 rounded-3" style="background:#69b4f3;">
                    <p>{{ comment.textMessage }}</p>
                </div>
            </div>
        </section>
    {% else %}
        <section class="chat w-75">
            <div class="message message--user-2 w-50">
                <time class="message__time">{{ comment.dateAndTime|date('H:i Y-m-d') }}</time>
                <figure class="message__author-pic">
                    <img src="comment.sender.worker.photo">
                </figure>
                <div class="text-black text-center w-100 rounded-3" style="background:#B0413E;">
                    <p>{{ comment.textMessage }}</p>
                </div>
            </div>
        </section>
    {% endif %}
{% endfor %}